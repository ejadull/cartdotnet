@model Entities.Cart.CartItem

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Panel/Views/Shared/_Layout.cshtml";
}


<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Detalle </h3>
                    <br />

                </div>
                <!-- /.card-header -->
                <div class="card-body">
                    <dl class="dl-horizontal">
                        <dt>
                            @Html.DisplayNameFor(model => model.Products.ProductName)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Products.ProductName)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.CartId)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.CartId)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.Quantity)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Quantity)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.DateCreated)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.DateCreated)
                        </dd>

                    </dl>
                 
                    <p>
                        @Html.ActionLink("Editar", "Edit", new { id = Model.ItemId }, new { @class = "btn btn-outline-primary" }) |
                        @Html.ActionLink("Regresar al listado", "Index", null, new { @class = "btn btn-outline-secondary" })
                    </p>
            </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->


        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>
<!-- /.content -->
 
